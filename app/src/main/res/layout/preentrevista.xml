<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreEntrevistaActivity">

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background_gradient"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </FrameLayout>

    <EditText
        android:id="@+id/nomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="?attr/actionBarSize"
        android:textColor="@color/azulNPMP"
        android:hint="Nome do entrevistado"
        android:textColorHint="@color/colorPrimaryDark"
        android:inputType="textPersonName" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        app:srcCompat="@drawable/logo" />

    <edmt.dev.advancednestedscrollview.AdvancedNestedScrollView
        android:id="@+id/nested_scroll_view"
        app:layout_behavior="projeto.suporteentrevista.Behavior.CustomBehavior"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="24dp"
                        android:paddingTop="16dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="4dp"
                        android:text="Perguntas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/editTextNovaPergunta"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="24dp"
                            android:layout_marginLeft="24dp"
                            android:ems="10"
                            android:hint="Adicionar nova pergunta?"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:text="" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/btnNovaPergunta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="24dp"
                            android:clickable="true"
                            app:srcCompat="@drawable/ic_control_point_white_24dp" />
                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <edmt.dev.advancednestedscrollview.MaxHeightRecyclerView
                            android:id="@+id/card_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </edmt.dev.advancednestedscrollview.MaxHeightRecyclerView>

                        <View
                            android:id="@+id/card_header_shadow"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:alpha="0"
                            android:background="@drawable/toolbar_shadow" />

                    </FrameLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/beginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginRight="24dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_check_white_24dp" />

        </FrameLayout>


    </edmt.dev.advancednestedscrollview.AdvancedNestedScrollView>

</android.support.design.widget.CoordinatorLayout>